@using Domain.Enums
@model PlayersViewModel

@{
	ViewBag.Title = "Team manager";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Team manager</h2>

@using (Html.BeginForm("Create", "PlayerSelection", FormMethod.Post) )
{
	<div>
		@Html.ListBoxFor(model => model.SelectedPlayers, new SelectList(Model.Players.OrderBy(x => x.Name), "Id", "Name"), new { style = "height: 400px;" })
	</div>
	
	<div>
		@Html.RadioButton("TeamGenerationMethod", TeamGenerationMethod.Random) Random
		@Html.RadioButton("TeamGenerationMethod", TeamGenerationMethod.GroupByAffiliation) Group by Affiliation
	</div>

	<input type="submit" value="Create Teams" />
}

@using (Html.BeginForm("New", "Player", FormMethod.Get) )
{
	<input type="submit" value="Add player"/>
}
